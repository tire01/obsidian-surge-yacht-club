<UserControl x:Class="RowerMoniter.Views.SpeedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RowerMoniter.Views"
             xmlns:viewModels="clr-namespace:RowerMoniter.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{x:Type viewModels:SpeedViewModel}">
    <StackPanel>
        <TextBlock Text="Speed" FontSize="20"></TextBlock>
        <TextBlock Text="{Binding Path=Speed, Mode=OneWay}" FontSize="200"></TextBlock>
    </StackPanel>
</UserControl>
